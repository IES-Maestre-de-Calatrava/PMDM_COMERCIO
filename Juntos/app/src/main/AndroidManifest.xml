<?xml version="1.0" encoding="utf-8"?>
<manifest
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools">

<!--Estos son los permisos de lectura, borrado, insertado y modificacion del calendario-->
<uses-sdk android:minSdkVersion="14" />

<uses-permission android:name="android.permission.READ_CALENDAR" />
<uses-permission android:name="android.permission.WRITE_CALENDAR" />

<uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
    android:allowBackup="true"
    android:dataExtractionRules="@xml/data_extraction_rules"
    android:fullBackupContent="@xml/backup_rules"
    android:icon="@mipmap/ic_launcher_new"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_new_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.Juntos">

    <activity
        android:name=".view.DescargasActivity"
        android:exported="false" />
    <activity
        android:name=".view.AcercadeActivity"
        android:exported="false" />
    <activity
        android:name=".view.EventoCalendarioActivity"
        android:exported="false" />
    <activity
        android:name=".view.ComentarioActivity"
        android:exported="false" />
    <activity
        android:name=".view.DocumentosActivity"
        android:exported="false" />
    <activity
        android:name=".view.TareasActivity"
        android:exported="false" />
    <activity
        android:name=".view.InvitarActivity"
        android:exported="false" />
    <activity
        android:name=".view.ConectaActivity"
        android:exported="false" />
    <activity
        android:name=".view.CalendarioActivity"
        android:exported="false" />
    <activity
        android:name=".view.MainActivity"
        android:exported="false" />
    <activity
        android:name=".view.WelcomeActivity"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
</application>


        <!-- Esta etiqueta que pone <queries> se usa para que la app pueda
        detectar si hay otras aplicaciones (en este caso la de calendario) -->

    <queries>
        <intent>
            <action android:name="android.intent.action.INSERT" />
            <data android:mimeType="vnd.android.cursor.dir/event" />
        </intent>
    </queries>

</manifest>
